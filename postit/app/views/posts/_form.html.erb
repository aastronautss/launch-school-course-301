<%= render 'shared/errors', obj: @post %>
<br />

<div class='well'>
  <%= form_for @post do |f| %>
    <div class='control-group'>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div class='control-group'>
    </div>
      <%= f.label :url, 'URL' %>
      <%= f.text_field :url %>
    <div class='control-group'>
      <%= f.label :description %>
      <%= f.text_area :description, rows: 5 %>
    </div>
    <%= f.submit "#{action} Post", class: 'btn btn-primary' %>
  <% end %>
</div>
